{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~config/*": [
        "./config/*"
      ],
      "~public/*": [
        "./public/*"
      ],
    },
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "env.d.ts",
    "**/*.d.ts",
    "**/*.js",
    "**/*.json",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx"
  ]
}
